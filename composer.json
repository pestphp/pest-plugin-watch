{
    "name": "pestphp/pest-plugin-watch",
    "description": "The Pest Watch Plugin",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin",
        "watch"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Caneco",
            "email": "caneco@me.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "pestphp/pest-plugin": "^2.0.1",
        "react/child-process": "^0.6.5",
        "react/event-loop": "^1.4.0"
    },
    "conflict": {
        "evenement/evenement": "^1.0",
        "pestphp/pest": "<1.0"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Watch\\": "src/"
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.12.1",
        "pestphp/pest-dev-tools": "^2.14.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        },
        "pest": {
            "plugins": [
                "Pest\\Watch\\Plugin"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
